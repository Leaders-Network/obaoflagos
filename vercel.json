{
  "images": {
    "sizes": [640, 750, 828, 1080, 1200, 1920],
    "domains": ["localhost", "your-domain.vercel.app"],
    "remotePatterns": [
      {
        "protocol": "https",
        "hostname": "**"
      }
    ]
  },
  "routes": [
    {
      "src": "/images/(.*)",
      "dest": "/public/images/$1"
    }
  ]
} 